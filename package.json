{
  "name": "gridus",
  "version": "0.1.3",
  "description": "A semantic flexbox grid made with stylus",
  "main": "index.js",
  "scripts": {
    "test": "tape -r babel-register test/*.js",
    "test:watch": "tape-watch -r babel-register test/*.js -p tap-diff",
    "lint": "stylint lib/ -c .stylintrc",
    "precommit": "npm run lint",
    "prepush": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/gridus.git"
  },
  "keywords": [
    "stylus",
    "grid",
    "flexbox",
    "flexible",
    "grid system",
    "utility"
  ],
  "author": "Thiago Santos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiamsantos/gridus/issues"
  },
  "homepage": "https://github.com/thiamsantos/gridus#readme",
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "css": "^2.2.1",
    "husky": "^0.12.0",
    "stylint": "^1.5.6",
    "stylus": "^0.54.5",
    "tap-diff": "^0.1.1",
    "tape": "^4.6.3",
    "tape-watch": "^2.2.4"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "sourceMaps": "inline"
  }
}
